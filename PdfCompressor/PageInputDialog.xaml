<Window x:Class="PdfCompressor.PageInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="White"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        SizeToContent="Height">

    <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Prompt -->
            <TextBlock x:Name="PromptText"
                       Text=""
                       Foreground="#1E1E1E"
                       FontSize="14"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap"/>

            <!-- Input -->
            <TextBox x:Name="InputBox"
                     Grid.Row="1"
                     Height="30"
                     Margin="0,0,0,12"
                     Background="White"
                     Foreground="#222"
                     BorderBrush="#888"
                     BorderThickness="1"
                     Padding="5"
                     FontSize="14"/>

            <!-- OK / Cancel Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,6">
                <Button x:Name="OkButton"
                        Content="OK"
                        Width="90" Height="30"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Ok_Click"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="90" Height="30"
                        Background="#EEE"
                        Foreground="#333"
                        Click="Cancel_Click"/>
            </StackPanel>

            <!-- Label + Delete Button -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,6,0,0">
                <TextBlock x:Name="EvenOddLabel"
                           VerticalAlignment="Center"
                           Foreground="#333"
                           FontSize="13"
                           Margin="0,0,10,0"/>
                <Button x:Name="DeleteEvenOddButton"
                        Width="90" Height="30"
                        Background="#EEE"
                        Foreground="#333"
                        Click="DeleteEvenOdd_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
